---
import CodeBlock from './CodeBlock.svelte';
---

<section id='contact'>
  <h2 class='section-title'>
    <a href='#contact'>Contact</a>
  </h2>
  <div>
    <CodeBlock client:load='svelte' />
    <ul>
      <li>
        <a href='https://github.com/juliankrzysiak'>GitHub</a>
      </li>
      <li>
        <a href='https://www.linkedin.com/in/juliankrzysiak'>LinkedIn</a>
      </li>
      <li>
        <a href='https://drive.google.com/file/d/1iLPJqukBctXrzHqIq1KBfMOdRx-paxt9/view?usp=sharing'
          >Resume</a
        >
      </li>
    </ul>
  </div>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  div {
    display: flex;
    flex-direction: column;
    flex: 1;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }

  ul {
    display: flex;
    flex-direction: column;
    width: fit-content;
    gap: 2rem;
    text-align: center;
    font-size: var(--text-xl);
    text-decoration: underline var(--color-rose-900);
  }

  :global(:root.dark) ul {
    text-decoration-color: var(--color-violet-500);
  }

  @media (min-width: 1024px) {
    div {
      gap: 3rem;
    }

    ul {
      font-size: var(--text-2xl);
    }
  }
</style>
