---
import Card from '@/components/Card.astro';
const { title, author, category, url, description } = Astro.props;
---

<Card title={title} url={url}>
  <p>{description}</p>
  <div>
    <p>
      {author}
    </p>
    <p>
      {category}
    </p>
  </div>
</Card>

<style>
  div {
    display: flex;
    justify-content: space-between;
  }

  p {
    font-weight: 300;
  }
</style>
